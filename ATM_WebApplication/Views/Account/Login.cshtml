@using ATM_WebApplication.Dto;
@model LoginDto;
@{
    ViewData["Title"] = "Login";
}

<h1 class="text-center">ورود</h1>

<div class="text-center">
    <form asp-action="Login" method="post">
        <div class="form-group">
            <label asp-for="Number">شماره حساب</label>
            <input asp-for="Number" class="form-control" />
            <span asp-validation-for="Number" class="text-danger"></span>
        </div>

        <div class="form-group">
            <label asp-for="Pin">رمز عبور</label>
            <input asp-for="Pin" class="form-control" type="password" />
            <span asp-validation-for="Pin" class="text-danger"></span>
        </div>

        <button type="submit" class="btn btn-primary">ورود</button>
    </form>

    <div>
        <a asp-action="Register">ایجاد حساب جدید</a>
    </div>
</div>

@section Scripts {

    @{
        await Html.RenderPartialAsync("_ValidationScriptsPartial");
    }
}